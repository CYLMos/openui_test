<!--
    controllerName is used to define the location of the .js file
	This .js file can control the behavior of the UIs we defined
	In this example, onShowHello is the function in the .js file
-->
<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Translatable_Texts.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<!--
	    i18n>showHelloButtonText respresents the correspondence value will load
	-->
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"/>
	<Input
	    value="{/recipient/name}"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true"
        width="60%"/>
</mvc:View>
